		lv2:index 5 ;
		lv2:symbol "control_in_3" ;
		lv2:name "Control In 3" ;
		lv2:minimum 0.0;
		lv2:maximum 1.0;
		lv2:default 0.0;
	] , [
	  a lv2:InputPort,
			lv2:ControlPort;
		lv2:index 6 ;
		lv2:symbol "control_in_4" ;
		lv2:name "Control In 4" ;
		lv2:minimum 0.0;
		lv2:maximum 1.0;
		lv2:default 0.0;
	] , [

vm:dBFS
	a pset:Preset ;
		lv2:appliesTo vm:vm ;
		rdfs:label "dBFS" ;
	lv2:port [
		lv2:symbol "control_in_0" ;
		pset:value 0.5
	] ;
	state:state [
		vm:graph [
			a atom:Tuple ;
			rdf:value (
				# dBFS := Log10( |Control0| ) * 20.0
				0 vm:opControl
				vm:opAbs
				vm:opLog10
				20.0 vm:opMul
			)
		]
	] .

vm:lfo
	a pset:Preset ;
		lv2:appliesTo vm:vm ;
		rdfs:label "LFO" ;
	lv2:port [
		lv2:symbol "control_in_0" ;
		pset:value 10.0
	] ;
	state:state [
		vm:graph [
			a atom:Tuple ;
			rdf:value (
				# Phase := (Frame % (SampleRate * Control0) ) / (SampleRate * Control0)
				vm:opSampleRate
				0 vm:opControl
				vm:opMul
				vm:opPush
				vm:opFrame
				vm:opSwap
				vm:opMod
				vm:opSwap
				vm:opDiv
				0 vm:opStore

				# SquareLFO := (Phase > 0.25) && (Phase < 0.75)
				0 vm:opLoad
				0.25 vm:opGt
				0 vm:opLoad
				0.75 vm:opLt
				vm:opAnd
				16383 vm:opMul
				8191 vm:opSub

				# TriangleLFO := (Phase > 0.5 ? (1.0 - Phase) : Phase) * 2.0
				1.0
				0 vm:opLoad
				vm:opSub
				0 vm:opLoad
				vm:opPush
				0.5 vm:opGt
				vm:opTernary
				2.0 vm:opMul
				16383 vm:opMul
				8191 vm:opSub

				# SineLFO := Sin( (Phase - 0.25) * 2.0 * PI) * 0.5 + 0.5
				0 vm:opLoad
				0.25 vm:opSub
				2.0 vm:opMul
				vm:opPi vm:opMul
				vm:opSin
				0.5 vm:opMul
				0.5 vm:opAdd
				16383 vm:opMul
				8191 vm:opSub

				# push phase
				0 vm:opLoad
				16383 vm:opMul
				8191 vm:opSub
			)
		]
	] .
